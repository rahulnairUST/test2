<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
<Dialog id="idRadioDialog" title="Selection">
<content>
<VBox class="sapUiSmallMargin" id="idSalesVBox">
    <RadioButtonGroup id="GroupA">
			<RadioButton id="idOption1" text="{i18n>Option1}" selected="true" />
			<RadioButton id="idOption2" text="{i18n>Option2}" />
		</RadioButtonGroup>
</VBox>
</content>
<beginButton>
    <Button id="idOKButton" type="Emphasized" press="onOKPressed" text="OK"/>
</beginButton>
<endButton>
    <Button id="idCancel" press="onCancelPressed" text="Cancel"/>
</endButton>
</Dialog>
</core:FragmentDefinition>